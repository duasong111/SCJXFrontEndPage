page {
  background-color: #f5f5f5;
}
.container {
  /* 其实这里写的是不正规的，不能这样去进行定死的 */
  display: flex;
  flex-direction: column;
  align-items: center;
}
.avatar-container {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  overflow: hidden;
  border: 2px solid rgb(250, 250, 250);
}

.avatar {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.box-container {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  width: 90%;
  
}

.left-box,
.right-box {
  width: 40%;
  height: 80px;
  border-radius: 10px;
  background-color: rgb(253, 253, 253);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.left-box-setting{
  width: 80%;
  height: 30%;
  font-family:Cambria, Cochin, Georgia, Times, ‘Times New Roman’, serif;
  border: solid 3rpx rgb(219, 216, 216);
  border-radius: 8rpx;
  display: flex;
  background-color: #cdd1d3;
  margin: 6rpx;
  justify-content: center;
  align-items: center;
}

.right-box {
  width: 50%;
}
/* 用户名的设置 */
.username {
  margin-top: 20rpx;
  text-align: center;
}
/* 底部的功能页面的显示 */
.bottom-show{
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  width: 90%;
  background-color: red;
}
.setting{
  margin-top: 30rpx;
  width: 98%;
}
